                <label asp-for="informtion" class="control-label"></label>
                <input asp-for="informtion" class="form-control" />
                <span asp-validation-for="informtion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClasseId" class="control-label"></label>
                <select asp-for="ClasseId" class ="form-control" asp-items="ViewBag.ClasseId"></select>
