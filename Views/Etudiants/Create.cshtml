@model EmploiDuTemps.Models.Etudiant

@{
    ViewData["Title"] = "Create";
}

<h1>Creation d etudiant</h1>

<h4>Etudiant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
