@model IEnumerable<EmploiDuTemps.Models.ClasseMatierProf>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste d Affectation des professeurs et matiers pour classes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.classe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.matier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prof)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.classe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.matier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prof)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.nameId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.nameId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.nameId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
